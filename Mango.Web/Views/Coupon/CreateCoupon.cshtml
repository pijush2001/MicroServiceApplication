@model CouponDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create New Coupon</title>
    <style>
        

        .form-container {
            background-color: #ffffff; /* White background for form */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
            max-width: 600px;
            margin: 50px auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2 class="mb-4">Create New Coupon</h2>
            <form asp-action="CreateCoupon" method="post">
                <div class="form-group">
                    <label asp-for="CouponCode" class="form-label">Coupon Code</label>
                    <input asp-for="CouponCode" class="form-control" />
                    <span asp-validation-for="CouponCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiscountAmount" class="form-label">Discount Amount</label>
                    <input asp-for="DiscountAmount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MinimumAmount" class="form-label">Minimum Amount</label>
                    <input asp-for="MinimumAmount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MinimumAmount" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Save Coupon</button>
                <a asp-action="CouponIndex" asp-controller="Coupon" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

